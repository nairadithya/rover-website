---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import Button from '~/components/ui/Button.astro';
import { YouTube } from 'astro-embed';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- About Us Section ******************* -->
  <section class="bg-gray-50 dark:bg-slate-900 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">About Us</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          Team Odyssey is a dynamic group of innovators committed to pushing the boundaries of technology and creativity. We work across domains to build experiences that solve real-world problems and leave a lasting impact.
        </p>
        <Button
          variant="primary"
          target="_blank"
          text="Sponsor Us"
          href="https://github.com/onwidget/astrowind"
          icon="tabler:heart-handshake"
          class="w-full sm:w-auto"
        />
      </div>
    </div>
  </section>

  <div class="my-8 flex justify-center">
    <div style="width:100%;max-width:900px;aspect-ratio:16/9;">
      <iframe 
        src="https://www.youtube.com/embed/kf187VukHJA?si=sbejPwf7c9dvRtiL" 
        title="IRC (International Rover Challenge) | Team Odyssey | AVVB | Rover Functionality Demonstration" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        referrerpolicy="strict-origin-when-cross-origin" 
        allowfullscreen
        style="width:100%;height:100%;border-radius:12px;"
      ></iframe>
    </div>
  </div>

  <Features3
    title="Meet our team"
    subtitle="We're a rag-tag team of students, working across departments to bring Anveshak to life."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'CS Subsystem',
        description:
          'The CS Subsystem is in charge of programming the primitives for the rover to issue directions.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Automation Subsystem',
        description:
          'Duis sed lectus in nisl vehicula porttitor eget quis odio. Aliquam erat volutpat. Nulla eleifend nulla id sem fermentum.',
        icon: 'tabler:ai',
      },
      {
        title: 'Mechanial Subsystem',
        description:
          'Vivamus porttitor, tortor convallis aliquam pretium, turpis enim consectetur elit, vitae egestas purus erat ac nunc nulla.',
        icon: 'tabler:settings',
      },
      {
        title: 'Electrical Subsystem',
        description:
          'Duis sed lectus in nisl vehicula porttitor eget quis odio. Aliquam erat volutpat. Nulla eleifend nulla id sem fermentum.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Arm Subsystem',
        description:
          'Duis sed lectus in nisl vehicula porttitor eget quis odio. Aliquam erat volutpat. Nulla eleifend nulla id sem fermentum.',
        icon: 'tabler:asset',
      },
      {
        title: 'Science Subsystem',
        description:
          'Duis sed lectus in nisl vehicula porttitor eget quis odio. Aliquam erat volutpat. Nulla eleifend nulla id sem fermentum.',
        icon: 'tabler:flask',
      },
    ]}
    image={{
      src: '~/assets/images/rover-team.png',
      alt: 'Colorful Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Achievements"
    subtitle="Our team proudly secured 6th place in IRDC 2020 and ranked among the top 20 in IRC 2020, showcasing consistent performance on global platforms. We placed 23rd in the ISRO Rover Challenge 2024 and recently qualified for the IRC 2025 finals, ranking 17th in the SDDR phase. These milestones reflect our dedication to innovation, engineering excellence, and collaborative problem-solving."
    isReversed={true}
    callToAction={{
      text: 'See more',
      href: '/',
    }}
    items={[
      {
        title: '6th place in IRDC 2020',
        description: '',
        icon: 'tabler:award',
      },
      {
        title: 'Top 20 in IRC 2020',
        description: '',
        icon: 'tabler:award',
      },
      {
        title: '17th place in IRC 2025',
        description: '',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Our locations"
    tagline="Find us"
    columns={1}
    items={[
      {
        title: 'Amrita School of Engineering, Bengaluru',
        description: 'Amrita Vishwa Vidyapeetham, Kasavanahalli, Carmelaram P.O., Bengaluru, Karnataka 560035',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Technical Support"
    tagline="Contact us"
    columns={1}
    items={[
      {
        title: 'Email us',
        description:
          'Reach out to us at: <a href="mailto:rover_avvb@blr.amrita.edu" class="text-primary underline">rover_avvb@blr.amrita.edu</a>',
        icon: 'tabler:mail',
      },
    ]}
  />
