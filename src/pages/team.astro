---
import Features4 from '~/components/widgets/Features4.astro';
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import teams from '~/data/teams';
const metadata = {
  title: 'Our Team',
  charset: 'UTF-8',
  name: 'viewport',
  content: 'width-device-width',
};
---

<Layout metadata={metadata}>
  <HeroText tagline="Our team" title="Meet the members of our subdivisions!" />

  <Features4
    title="CS and AI"
    subtitle="Integrates all other subsystems and enables rover to act autonomously and perform all tasks programmatically."
    isBeforeContent={true}
    columns={2}
    items={teams['CS and AI']}
  />
  <Features4
    title="Arm"
    subtitle="Responsible for manipulating the arm attached to the rover."
    isBeforeContent={true}
    columns={2}
    items={teams['Arm']}
  />
  <Features4
    title="Mechanical And Fabrication"
    subtitle="Responsible for physical build of the rover and ensures its movement and tolerance."
    isBeforeContent={true}
    columns={2}
    items={teams['Mechanical']}
  />

  <Features4
    title="Media Team"
    subtitle="Responsible for capturing and documenting the rover."
    isBeforeContent={true}
    columns={2}
    items={teams['Media']}
  />
  <Features4
    title="Science"
    subtitle="Responsible for gathering insights and analytics about the data gathered from the samples taken by the rover."
    isBeforeContent={true}
    columns={2}
    items={teams['Science']}
  />
  <Features4
    title="Electrical, Electronics And Communication"
    subtitle="Integrating sensors, power management and stable communication"
    isBeforeContent={true}
    columns={2}
    items={teams['Electrical']}
  />
</Layout>
